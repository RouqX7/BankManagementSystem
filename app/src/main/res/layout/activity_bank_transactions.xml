<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Views.BankTransactions">


    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select Your Transaction"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/depositBtn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="86dp"
        android:backgroundTint="@color/my_primary"
        android:text="Deposit"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/balanceBtn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/my_primary"
        android:text="Balance Enquiry"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/pinChangeBtn"
        app:layout_constraintTop_toBottomOf="@+id/miniStatementBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/miniStatementBtn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/my_primary"
        android:text="Mini Statement"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/pastCashBtn"
        app:layout_constraintTop_toBottomOf="@+id/cashWBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cashWBtn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="87dp"
        android:backgroundTint="@color/my_primary"
        android:text="Cash Withdrawal"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toEndOf="@+id/depositBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pinChangeBtn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/my_primary"
        android:text="Pin Change"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pastCashBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pastCashBtn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/my_primary"
        android:text="Past Cash"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depositBtn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exitBtn"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginStart="221dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/my_primary"
        android:text="EXIT"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balanceBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>